<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:background="#66000000"
    android:clickable="true"
    android:id="@+id/detail_background"
    tools:context=".fragment.details">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/radius_detail_page">

        <ImageButton
            android:id="@+id/details_google_maps_btn"
            android:layout_width="30dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/maps_logo"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:layout_height="30dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_image"
            android:layout_width="100dp"
            android:src="@mipmap/maps_logo"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/detail_page_record_radius"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_adress"
                android:layout_margin="10dp"
                android:text="ADRESS"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/detail_page_record_radius"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_text"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Details"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
</layout>